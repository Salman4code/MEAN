div {
    width: 100px;
    height: 100px;
    background: red;
    transition: width 2s, height 2s,transform 2s;
    transition: width 2s, height 2s, transform 2s;
}

div:hover {
    width: 300px;
    height: 300px;
    -webkit-transform: rotate(180deg); 
    transform: rotate(180deg);
}
</style>
