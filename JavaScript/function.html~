<html>
<head>
<script>
function concatenate(first,last)
{
	var full;
	full=first+last;
	return full;
}
function secondFunction()
{
var result;
result=concatenate(first,last);
document.write(result);
}
</script>
<body>
<form>
<input type="button" onclick="secondFunction()" value="say hello">
</form>

